---
import Layout from '../../layouts/Layout.astro';
import Logo from '../../components/Logo.astro';
import AddToCart from '../../components/AddToCart.astro';
import CartDrawer from '../../components/CartDrawer.astro';

export async function getStaticPaths() {
  const products = [
    {
      id: 'catalyst-serum',
      name: 'THE CATALYST',
      price: 320,
      tagline: 'Epigenetic Repair Complex',
      description: 'A high-potency Exosome & Peptide complex designed to repair skin at a genetic level, optimizing cellular longevity and resilience.',
      ingredients: ['Exosomes', 'Copper Peptides', 'Niacinamide', 'Sirtuin Activators'],
      usage: 'Apply 3-4 drops to clean skin morning and night.',
      image: '/assets/SERUM_amber.png', // Temporary placeholder
      accent: 'var(--accent-color)'
    },
    {
      id: 'blue-light-defense',
      name: 'BLUE LIGHT DEFENSE',
      price: 180,
      tagline: 'Digital Stress Neutralizer',
      description: 'A structural barrier cream that neutralizes high-energy visible (HEV) light and urban pollutants, preventing digital aging.',
      ingredients: ['Lutein', 'Ecotoin', 'Ceramides', 'Antioxidant Complex'],
      usage: 'Massage into skin as the final step of your morning routine.',
      image: '/assets/CREAM_chrome.png',
      accent: '#4A90E2'
    },
    {
      id: 'circadian-night-oil',
      name: 'CIRCADIAN NIGHT OIL',
      price: 240,
      tagline: 'Nocturnal Bio-Hacker',
      description: 'An adaptive oil that synchronizes with the skinâ€™s nocturnal repair genes, promoting deep cellular regeneration during sleep.',
      ingredients: ['Melatonin Derivatives', 'Bakuchiol', 'Squalane', 'Rare Botanicals'],
      usage: 'Apply 2-3 drops after moisturizer in the evening.',
      image: '/assets/OIL_frosted.png',
      accent: '#6B4E71'
    }
  ];

  return products.map((product) => ({
    params: { id: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
---

<Layout title={`${product.name} | SESSR Longevity`}>
    <nav>
        <div class="logo">
            <a href="/"><Logo height="40px" /></a>
        </div>
        <div class="nav-meta">
            <button id="cart-trigger" class="cart-btn">CART <span id="header-cart-count">(0)</span></button>
        </div>
    </nav>

    <main class="pdp-container">
        <div class="product-hero">
            <div class="product-visual">
                <div class="image-wrapper">
                    <img src={product.image} alt={product.name} class="pdp-image" />
                    <div class="glow" style={`background: ${product.accent};`}></div>
                </div>
            </div>
            <div class="product-details">
                <span class="eyebrow">BIO-TECH SERIES</span>
                <h1>{product.name}</h1>
                <p class="tagline">{product.tagline}</p>
                <p class="description">{product.description}</p>
                
                <div class="price-section">
                    <span class="price">${product.price.toFixed(2)}</span>
                    <AddToCart 
                        id={product.id} 
                        name={product.name} 
                        price={product.price} 
                        image={product.image}
                    />
                </div>

                <div class="specs">
                    <div class="spec-group">
                        <h3>KEY INGREDIENTS</h3>
                        <ul>
                            {product.ingredients.map(ing => <li>{ing}</li>)}
                        </ul>
                    </div>
                    <div class="spec-group">
                        <h3>APPLICATION</h3>
                        <p>{product.usage}</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <CartDrawer />
</Layout>

<style>
    .pdp-container {
        padding: 120px 5% 60px;
        min-height: 100vh;
    }

    .product-hero {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 80px;
        align-items: center;
        max-width: 1400px;
        margin: 0 auto;
    }

    .product-visual {
        position: relative;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 40px;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .image-wrapper {
        position: relative;
        z-index: 2;
        width: 60%;
    }

    .pdp-image {
        width: 100%;
        height: auto;
        filter: drop-shadow(0 20px 50px rgba(0,0,0,0.5));
    }

    .glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 150%;
        height: 150%;
        filter: blur(100px);
        opacity: 0.1;
        z-index: 1;
    }

    .product-details h1 {
        font-size: 3.5rem;
        margin-bottom: 0.5rem;
        letter-spacing: 2px;
    }

    .tagline {
        font-family: 'Playfair Display', serif;
        font-style: italic;
        color: var(--accent-color);
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .description {
        font-size: 1.1rem;
        line-height: 1.8;
        color: rgba(255,255,255,0.7);
        margin-bottom: 3rem;
        max-width: 500px;
    }

    .price-section {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .price {
        font-size: 2rem;
        font-weight: 300;
    }

    .specs {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
    }

    .spec-group h3 {
        font-size: 0.8rem;
        letter-spacing: 2px;
        color: rgba(255,255,255,0.4);
        margin-bottom: 1rem;
    }

    .spec-group ul {
        list-style: none;
        padding: 0;
    }

    .spec-group li {
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    @media (max-width: 968px) {
        .product-hero {
            grid-template-columns: 1fr;
            gap: 40px;
        }
        .pdp-container {
            padding-top: 100px;
        }
        .product-details h1 {
            font-size: 2.5rem;
        }
    }
</style>

<script>
    import { cartItems, toggleCart } from '../../stores/cartStore';

    const cartTrigger = document.getElementById('cart-trigger');
    const headerCount = document.getElementById('header-cart-count');

    cartTrigger?.addEventListener('click', toggleCart);

    cartItems.subscribe(items => {
        const count = Object.values(items).reduce((acc, item) => acc + item.quantity, 0);
        if (headerCount) {
            headerCount.textContent = `(${count})`;
        }
    });
</script>
